<div class="row">
  <%# <div class="col-12"> %>
  <div class="alert alert-warning alert-dismissible fade show comment-like-error col-3 position-fixed top-0 mt-5 end-0" role="alert">
    <strong>Please </strong> Login to like the comment.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <div class="alert alert-warning alert-dismissible fade show comment-reply-error col-3 position-fixed top-0 mt-5 end-0" role="alert">
    <strong>Please </strong> Login to reply on comment.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% unless comment.parent_id || !comment.persisted? %>
    <div class="card mb-2 col-12">
      <div class="card-header">
        <%= commenter_name comment.user_id %>
      </div>
      <div class="card-body">
        <%= comment.body.html_safe %>
      </div>
      <div class="card-footer">
        <%= render partial:'comments/like_btn',locals:{comment: comment} %>
      </div>
      <div class="row" id="comment-reply-<%= comment.id %>">
        <%= render comment.replies %>
      </div>
    </div>
  <% end %>
  <div class="col-10 mx-auto comment-reply-<%= comment.id%>-form">
    <div id="reply-form-<%= comment.id %>"></div>
  </div>
</div>
<script>
  $(".comment-like-error").hide();
  $(".comment-reply-error").hide();
  function show_reply_form(post_id){
    <% if !current_user.nil?%>
        $(`#${post_id}`).show();
    <%else%>
      $("#login_error").show();

      setTimeout(() => {
        $("#login_error").hide();

      },3000);
    <%end%>
  }
  $(".comment-like-btn").click(()=>{
    $(".comment-like-error").show();
    setTimeout(() => {
        $(".comment-like-error").hide();
      },3000);
  });
  $(".reply-btn").click(()=>{
      $(".comment-reply-error").show();
      setTimeout(() => {
        $(".comment-reply-error").hide();
      },3000);
  });
</script>
