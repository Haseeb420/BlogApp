<div class="container" id="sign-up-box">

  <h3 class="text-center">
    Join us to! live in a world of Knowledge
  </h3>
  <div class="row mt-5">
    <div class="col-5 img-section">
      <%= image_tag'sign_up.jpg' %>
    </div>
    <div class="col-7 px-5 py-3 bg-white">
      <h2>Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row g-3 mb-3">
            <div class="col">
              <%= f.label :first_name,class:"form-label" %>
              <%= f.text_field :first_name, class:'form-control', placeholder:'First name',aria_label:"First name"%>
            </div>
            <div class="col">
              <%= f.label :last_name,class:"form-label" %>
              <%= f.text_field :last_name, class:'form-control', placeholder:'Last name',aria_label:"Last name"%>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col">
              <%= f.label :email,class:"form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'Email',aria_label:"Email"%>
            </div>
            <div class="col">
              <%= f.label :birthday,'DOB',class:"form-label" %>
              <%= f.date_field :birthday, class:'form-control', placeholder:'DoB',aria_label:"DoB"%>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col">
              <%= f.label :password, class:'form-label' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password",class:'form-control', placeholder:'Password',aria_label:"Password" %>
            </div>
            <div class="col">
              <%= f.label :password_confirmation,'Confirm Password', class:'form-label' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control', placeholder:'Confirm Password',aria_label:"Confirm Password" %>
            </div>
          </div>

          <div class="row g-3 mb-3">
            <div class="col">
              <%= f.label :profile_img, class:'form-label' %>

              <%= f.file_field :profile_img,class:'form-control', placeholder:'Profile Img',aria_label:"Profile Img" %>
            </div>
          </div>

          <div class="my-3">
            <%= f.submit "Sign up", :class => 'btn btn-success col-4 mx-auto d-block' %>
          </div>
        <% end %>
        <div class="links row">
            <%- if controller_name != 'sessions' %>
              <%= link_to "Already have account? Login", new_session_path(resource_name),class:'col-6 text-center' %>
            <% end %>

            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
               <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),class:'col-6 d-block text-center' %>
            <% end %>
        </div>

    </div>
  </div>
</div>
