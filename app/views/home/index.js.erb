$('#post_likes-<%= @post.id %>').text("<%= @post.post_likes.count%>")
<% if PostLike.where(user_id:@post.user_id).exists?%>
$('#post-like-btn-<%= @post.id %>').removeClass("bg-white");
$('#post-like-btn-<%= @post.id %>').addClass("bg-primary");
$('#post-like-btn-<%= @post.id %>').removeClass("text-secoundary");
$('#post-like-btn-<%= @post.id %>').addClass("text-white");


<%else%>
$('#post-like-btn-<%= @post.id %>').removeClass("bg-primary");
$('#post-like-btn-<%= @post.id %>').addClass("bg-white");
$('#post-like-btn-<%= @post.id %>').removeClass("text-white");
$('#post-like-btn-<%= @post.id %>').addClass("text-secoundary");

<%end%>
 
