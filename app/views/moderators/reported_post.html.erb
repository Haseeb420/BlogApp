<div class="row px-3 bg-white">
  <h2 class="mb-3 p-4">Reported Post</h2>
  <hr>
</div>
<div class="row bg-white px-3">
  <h3>Recent Posts</h3>
  <hr>
  <% if !@reports.nil? %>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">post#</th>
          <th  scope="col">Reason</th>
          <th scope="col">Reported By</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="post_data">
        <% @reports.each do |report| %>
          <tr>
            <th scope="row"><%= report.id %>
            </th>
            <td class="col-4"><%= report.reason%> </td>
            <td class="col-4"><%= commenter_name report.user_id%> </td>
            <td>
              <%= link_to "details",root_path, class:'btn btn-info' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h6>there is no post repoted.</h6>
  <% end %>
</div>
