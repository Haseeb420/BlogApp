<div class="container mb-5" id="navbar">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'BlogSpot', root_path,class:'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Home', root_path,class:'nav-link active' %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_page_path,class:'nav-link active' %>
        </li>
        <% if !user_signed_in?%>
          <li class="nav-item">
            <%= link_to "SignIN",new_user_session_path,class:"nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "SignUp",new_user_registration_path,class:"nav-link active" %>
          </li>
        <% else %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
